<% include ../partials/header %>

<!--Form that displays the textboxes to create a new book-->

<div class = "container">
    <div class = "form">
        <h1 style = "text-align: center;">Create a new book</h1>
        <div style = "width: 30%; margin: 27px auto;">
            <form action = "/index" method = "POST">
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "name" placeholder = "name">
                </div>
                 <div class = "form-group">
                    <input class = "form-control" type = "text" name = "image" placeholder = "image url">
                </div>
                <div class = "form-group">
                    <!--Here, in another version, I would like to add some options for text. In other words, I want to make it so that users can customize their descriptions.
                    (i.e. italicize some text, embed other articles or images.-->
                    <input class = "form-control" type = "text" name = "description" placeholder = "Describe the book you're posting :)">
                </div>
                <div class = "form-group">
                    <input class = "form-control" type = "text" name = "author" placeholder = "Who wrote this book?">
                </div>
                <div class = "form-group">
                     <button class = "btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <!--Image upload will be on this page in another version.-->
            <a href = "/index">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>